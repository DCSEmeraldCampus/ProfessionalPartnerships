@model ProfessionalPartnerships.Web.Models.AdminViewModels.Companies.CompaniesListViewModel

@{
	ViewData["Title"] = "Manage Companies";
}

<div class="clearfix">
	<div>
		<h2>@ViewData["Title"]</h2>
	</div>

	<div class="form-group" style="float: right;">
		@Html.ActionLink("Add New", "Edit", "Companies", null, new {@class = "btn btn-success"})
	</div>
</div>

<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">ID #</th>
				<th scope="col">Name</th>
				<th scope="col">Address</th>
				<th scope="col">Primary Contact</th>
				<th scope="col">Active</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var company in Model)
			{
			<tr>
				<th scope="row">@company.CompanyId</th>
				<td>
					@Html.ActionLink(company.Name, "Edit", "Companies", new { companyId = company.CompanyId}, null)
				</td>
				<td>@company.Address1</td>
				<td>TBD</td>
				<td>@company.IsActive</td>
			</tr>
			}
		</tbody>
	</table>
</div>